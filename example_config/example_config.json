{
    "user": {
        "name": "A U Thor",
        "email": "author@example.com"
    },

    "dolt": {
        "db_name": "annex-locations",
        "db_path": "./annex-locations",
        "default_remote": "origin",
        "default_commit_message": "update",
        "connection": {
            "host": "localhost",
            "server_socket": "/tmp/dolt.sock",
            "port": 3306,
            "user": "root"
        },
        "spawn_dolt_server": true
    },
    
    "file_key_format": "Sha256e",

    "filestore": {
        "type": "union",
        "mounts": [
            {
                "type": "measure",
                "child": {
                    "type": "annexfs",
                    "path": "./annex"
                }
            },
            {
                "type": "measure",
                "child": {
                    "type": "bloomkv",
                    "path": "./bloomkv"
                }
            }
        ]
    },

    "remotes": [
        {
            "name": "local",
            "files_url": "file://../local_remote",
            "uuid": "36b60d94-fbdf-476b-9479-f0abc61fa5ba"
        }
    ]
}